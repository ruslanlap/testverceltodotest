{

  "version": 2,

  "builds": [

    {

      "src": "src/pages/api/**/*.ts",

      "use": "@vercel/node"

    }

  ],

  "routes": [

    {

      "src": "/api/todos",

      "dest": "src/pages/api/todos/index.ts"

    },

    {

      "src": "/api/todos/(.*)",

      "dest": "src/pages/api/todos/[id].ts"

    }

  ]

}